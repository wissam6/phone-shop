<html>
    <head>
        <title>

        </title>
        <link rel="stylesheet" href="login_style.css">
    </head>
    <body>
        <%- include('header.ejs') %>
        <div class="login-page">
            <div class="form">
        <!--register form-->
        <h3 style="margin-bottom: 2em;">Sign Up</h3>
        <form class="register-form" method="post" action="/signup" style="display: block;">
            <input type="text" placeholder="name" name="name" pattern="[A-Za-z]{1,32}" required/>
            <input type="password" placeholder="password" name="password" pattern="/^[a-zA-Z0-9!@#\$%\^\&*_=+-]{8,12}$/g" required/>
            <input type="email" placeholder="email address" name="email" required/>
            <input type="text" placeholder="username" name="username" pattern="^[A-Za-z][A-Za-z0-9_]{7,29}$" required/>
            <button>create</button>
            <p class="message">Already registered? <a href="/login">Sign In</a></p>
          </form>
        </div>
    </div>
    </body>
    <%- include('footer') %>
</html>